{{!-- shows all posts --}}

<div>
    {{#each posts}}
    <article>
        <div>
            <h2>
                {{!-- link to each post individual page --}}
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{User.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div>
            {{body}}
        </div>
    </article>
    {{/each}}
</div>